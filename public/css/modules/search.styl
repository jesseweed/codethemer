#search-result
    text-align left

#search-head
    display block

#search-name
    display inline-block
    margin-bottom 20px

#search-status
    font-size 2em
    padding 0
    margin 0px 0px 20px 20px
    display inline-block

#search-controls
    float right
    clear left

#claim-name
    display block
    gradient-horizontal(color-secondary-dark, color-secondary)
    color color-secondary-text

#add-name
    display block
