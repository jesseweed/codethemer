.nav, .tabs, .content
    color #FFF

// NAV

.nav
    position fixed
    z-index 0
    background-color #0E1008
    width 20%
    left 0px
    top 0px
    height 100%
    padding 10px

.nav-section
    display block
    font-weight bold
    margin-bottom 10px
    margin-bottom 10px
    color rgba(255, 255, 255, 0.8)

.folder
    background-image url(img/icons/folder.png)
    background-repeat no-repeat
    background-size 14px, 14px
    background-position 1px 2px
    font-weight bold
    display block
    color rgba(255, 255, 255, 0.7)
    padding-left 22px
    padding-top 2px
    height: 20px;
    letter-spacing 0.1em
    margin-bottom 0px
    font-size 13px

.folder-open
    @extend .folder
    background-position 0px 2px
    background-image url(img/icons/folder-open.png)

.folder:hover, .folder-open:hover
    color rgba(255, 255, 255, 0.9)
    cursor pointer

.file-name
    font-weight normal
    display block
    color rgba(255, 255, 255, 0.4)
    margin-left 15px
    letter-spacing 0.1em
    font-size 12px
    padding 5px 0px 5px 5px
    transition(background-color)

.file-name:hover
    cursor default
    background-color rgba(255, 255, 255, 0.1)

.tab-header
    background-color #0E1008
    width 100%
    padding-top 5px

.tabs
    background-color #0E1008

.tabs li a 
    color #FFF

.tabs li
    padding 8px 60px 8px 16px
    margin 0px
    margin-right -6px
    margin-left -1px
    border-left solid 1px #0E1008
    display inline-block
    background-color #2E3229
    round_top_left(20px)
    round_top_right(50px)
    color rgba(255, 255, 255, 0.7)

.tabs li:hover
    background-color #3E4339
    cursor pointer

.tabs li.active
    background-color #1E2119

.tabs li.active:hover
    background-color #1E2119
    cursor default

.content
    position fixed
    z-index 1
    background-color #1E2119
    width 80%
    left 20%
    top 0px
    height 100%
    border-left solid 2px #000

.tab-close
    display inline-block
    padding-right 10px
    cursor pointer
