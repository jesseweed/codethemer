#masthead
  background-color #0e110d
  border-radius 0
  background-image url(img"bg.png")
  background-repeat no-repeat
  background-position 0px 0px
  width 100%
  height 133px
  box_shadow 0px, 1px, 2px, 3px, 0.1
  border-bottom 1px solid #ccc

#masthead-search
  position absolute
  top 50px
  right 20px
  width 250px
  box_shadow 0px, 0px, 2px, 1px, 0.2

#masthead-search-btn
  position absolute
  top 57px
  right 30px
  cursor pointer

#site-logo
  position absolute
  left 60px
  top 33px