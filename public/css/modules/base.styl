/* Elements */

*
  outline none

body, html
  font-size 13px
  font-family 'Raleway', sans-serif

ul, li
  list-style none
  margin 0px
  padding 0px

a
  display inline-block
  text-decoration none
  color color-primary
  margin 0
  padding 0

a:hover
  color color-primary-dark


/* Forms */

input
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

input[type=search]
  border none
  round(5px)
  padding 10px
  font-weight 600

input[type=search].dark
  background color-black
  color color-white

input[type=search].dark-webkit-input-placeholder
   color color-white

input[type=search].light
  background-color #fff
  background-color rgba(255, 255, 255, 0.9)
  color color-black

input[type=search].light-webkit-input-placeholder
   color color-black

/* buttons */
button, a.button
  display inline-block
  border none
  round(5px)
  color color-white
  font-weight 600
  padding 10px 20px 10px 20px
  gradient-horizontal(color-primary-dark, color-primary)
  cursor pointer
